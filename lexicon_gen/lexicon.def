with: std-ipa-features std-assimilations coronal-metathesis
#############################################
# .def File for Online version of Lexifer   #
# Web version of Lexifer compliant          #
#############################################

# Letters

letters: a b θ d e χ h i j k l m n o p ʁ r s t u v w y ɣ ç ʔ æ ɒ

#############################################
# Phoneme Classes                           #
# S = Stops                                 #
# F = Fricatives                            #
# O = Sonorants                             #
# L = Liquids                               #
# N = Nasals                                #
# V = Vowels                                #
# C = Consonants                            #
# W = Codas(Word Final)
# ***DISCLAIMER: SOME CONSONANTS MAY BE *** #
# ***SORTED INTO WRONG CATEGORY.        *** #
#############################################

C = χ l s ʁ r θ n k t h d w b j m p v ɣ ç ʔ
V = e i a y u æ ɒ o
S = t k p b d
O = r l n ʁ j w m
F = θ χ s h ɣ ç
L = r l w j ʁ
N = n m
W = s n r ʁ k t p θ ʔ
# THIS CLASS IS PRETTY SELF EXPLANATORY
Q = ʔ

random-rate: 25

# Macros
$L = VV
$S = SL
$N = SN
$Q = sS
$T = sSL
#CODA MACROS
$C = NS
$O = LS

% a  e  i  o  u  y  æ  ɒ
a +  ai ae -  au -  -  ao
e ea +  ei eu eu ui -  eo
i ia -  +  jo iu yy je jo
o -  oe oe +  ou -  -  -
u -  ue ui -  -  -  -  - 
y -  -  -  ui  -  + -  -
æ -  ij -  -  ui ui ää -
ɒ oa -  oi -  -  -  -  åå
words: C?VW? C$LW? C$V$C? $LW $SVW? $SV$C $SV$O $S$LW? $S$L$C $S$L$O $NVW? $NV$C $NV$O $N$LW? $N$L$C $N$L$O $QVW? $QV$C $QV$O $Q$LW? $Q$L$C $Q$L$O $TVW? $TV$C $TV$O $T$LW? $T$L$C $T$L$O

reject: ss
reject: ^ʔ

